melodySamMain = \relative c'' {
  a8 a a a gis4 gis |
  fis8 fis fis gis4 fis a8 ~ |
  a8 a a a gis4 gis |
}


melodyPrestonMain = \relative c {
  d8 d d d cis4 cis |
  b8 b b b4 b d8 ~ |
  d8 d d d cis4 cis |
}


melodySamFull = \relative c' {
  \melodySamMain
  fis4 s s2 |
}


melodyPrestonFull = \relative c {
  \melodyPrestonMain
  b4 r r2 |
}
